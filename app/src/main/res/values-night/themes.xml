<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.remember2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_one</item>
        <item name="colorPrimaryVariant">@color/color_two</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_one</item>
        <item name="colorSecondaryVariant">@color/color_two</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="SCREEN_GREY">
        <item name="android:background">#999DA0</item>
    </style>

    <style name="SCREEN_FLIPPED">
        <item name="android:background">#FFF</item>
    </style>

    <style name="SCREEN_COLOR">
        <item name="android:background">@color/color_one</item>
    </style>

    <style name="SCREEN_CARD" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/main_color</item>
    </style>


    <style name="TXT">
        <item name="android:textColor">@color/lightgrey</item>
    </style>

    <style name="EDTTXT_distinctiveHint">
        <item name="android:textColorHint">@color/lightgrey</item>
    </style>

    <style name="EDTTXT_login">
        <item name="android:background">@color/black</item>
        <item name="android:textColorHint">#903F9E</item>
    </style>

    <style name="EDTTXT_search">
        <item name="android:background">@color/main_color</item> <!-- TODO (A) welche farbe bei nightmode für edittext? -->
        <item name="android:textColorHint">@color/color_one</item>
    </style>


    <style name="BTN_INVIS">
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BTN_INVIS_MINI">
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:background">@android:color/transparent</item>
