<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.remember2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_one
        </item> <!--used for the app's toolbar and other primary UI elements-->
        <item name="colorPrimaryVariant">@color/color_two
        </item> <!--used for highlighting or differentiating certain UI components-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. TODO they are the same primary + secondary, just as that in night\themes -->
        <item name="colorSecondary">@color/color_one
        </item> <!--secondary Buttons or action items, Selection or highlighting states, Divider lines or separators, Progress indicators, Tabs or navigation, Secondary text or labels-->
        <item name="colorSecondaryVariant">@color/color_two</item> <!--...-->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


